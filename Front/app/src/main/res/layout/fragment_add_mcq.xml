<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/mainbackgound"
    tools:context="com.example.rashwan.playacademy.AddMCQ">
    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Answer"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp"
        />

    <EditText
        android:id="@+id/questionStatment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Question"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:background="#65b3bada"
        android:gravity="center_vertical"
        android:layout_marginTop="15sp"
        android:paddingLeft="15sp"


        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <EditText
                android:id="@+id/choiceAdd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:hint="choice1"
                android:background="@drawable/border"
                android:textSize="20sp"
                android:paddingLeft="15sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:layout_marginBottom="20dp"
                />
            <EditText
                android:id="@+id/choiceAdd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:textColor="#fff"
                android:hint="choice2"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                />
            <EditText
                android:id="@+id/choiceAdd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:textColor="#fff"
                android:hint="choice3"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                />
            <EditText
                android:id="@+id/choiceAdd4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:textColor="#fff"
                android:hint="choice4"
                android:textSize="20sp"
                android:paddingLeft="15sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#50b9aeae"
            android:layout_weight="1"
            android:text="Submit"
            android:fontFamily="monospace"
            android:textColor="#fff"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#50b9aeae"
            android:text="Add"
            android:fontFamily="monospace"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</LinearLayout>
