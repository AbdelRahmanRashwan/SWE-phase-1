<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rashwan.playacademy.SingleCourse"
    android:background="@drawable/mainbackgound"
    android:padding="18dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="30dp"
        android:textColor="#fff"
        android:id="@+id/courseName"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By "
            android:textSize="24dp"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator name"
            android:textSize="24dp"
            android:textColor="#fff"
            android:id="@+id/creatorName"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:id="@+id/teacherPanel"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add game"
            android:textColor="#fff"
            android:textSize="18dp"
            android:background="#50ffffff"
            android:id="@+id/addGame"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore games"
            android:textColor="#fff"
            android:textSize="18dp"
            android:background="#50ffffff"
            android:id="@+id/restoreGames"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll"
        android:textColor="#fff"
        android:textSize="18dp"
        android:background="#50ffffff"
        android:id="@+id/enroll"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No games to show"
        android:textColor="#fff"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/noGames"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/gameList"
        >
    </ListView>


</LinearLayout>
